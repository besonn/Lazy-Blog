extends ../layout.pug

append css
  link(rel='stylesheet', href='/css/admin/register.css')

append js
  script(src='/validation/jquery.validate.min.js')
  script(src='/js/admin/register.js')

block content
  .reg-bg
    .container
      div(class=['row', 'justify-content-center', 'mt-5'])
        .col-md-6
          .card
            div(class=['card-body', 'position-relative'])
              h4 注册Lazy Blog
              p 请填写以下信息
              i(class=['fas', 'fa-lock', 'position-absolute'])
            form#registerForm
              div(class=['form-group', 'mx-4', 'my-4'])
                input#username(name='username', class='form-control', type='text', placeholder='用户名以英文字母开头，包含下划线和数字，且长度为8-20个字符', data-container='body', data-toggle='popover', data-placement='right', data-content='用户名不符合要求')
              div(class=['form-group', 'mx-4', 'my-4'])
                input#password(name='password', class='form-control', type='password', placeholder='密码以英文字母开头，包含下划线和数字，且长度为6-16个字符', data-container='body', data-toggle='popover', data-placement='right', data-content='密码不符合要求')
              div(class=['form-group', 'mx-4', 'my-4'])
                input#repassword(name='repassword', class='form-control', type='password', placeholder='确认密码', data-container='body', data-toggle='popover', data-placement='right', data-content='确认不符合要求')
              div(class=['form-group', 'row', 'mx-4', 'my-4', 'no-gutters'])
                .col-sm-9
                  input#code(name='code', class='form-control', type='text', placeholder='验证码')
                .col-sm-3(id='captcha', data-container='body', data-toggle='popover', data-placement='right', data-content='验证不符合要求')
              div(class=['form-group', 'mx-4', 'my-4'])
                button#reg(type='submit', class=['btn', 'btn-success', 'btn-lg', 'btn-block']) 注册
            .card-body
              a(href='#', class=['card-link', 'ml-2']) 已有账号-登录



